{% extends 'base.html.twig' %}

{% block header_title %}
    <h1 class="text-center my-4">
        Bienvenue sur <strong>Todo List</strong>, l'application qui vous permet de gérer vos tâches sans effort !
    </h1>
{% endblock %}

{% block header_img %}
    <img class="img-fluid d-block mx-auto my-3" src="{{ asset('img/todolist_homepage.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="row justify-content-center">
            <div class="col-md-8 text-center d-grid gap-3">

                <a href="{{ path('task_create') }}" class="btn btn-success btn-lg">
                    Créer une nouvelle tâche
                </a>

                <a href="{{ path('task_list') }}" class="btn btn-info btn-lg">
                    Consulter la liste des tâches à faire
                </a>

                <a href="{{ path('task_list_completed') }}" class="btn btn-secondary btn-lg">
                    Consulter la liste des tâches terminées
                </a>

            </div>
        </div>
    {% else %}
        <div class="alert alert-info text-center mt-4">
            Connectez-vous pour accéder à la gestion de vos tâches !
        </div>
    {% endif %}
{% endblock %}