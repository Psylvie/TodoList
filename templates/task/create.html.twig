{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-4 mb-4">Créer une nouvelle tâche</h2>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                {{ form_start(form, {'action' : path('task_create'), 'attr': {'class': 'form-horizontal'}}) }}

                <div class="form-group">
                    {{ form_label(form.title, 'Titre de la tâche', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.content, 'Description', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success">Ajouter la tâche</button>
                </div>
                {{ form_end(form) }}

                <a href="{{ path('task_list') }}" class="btn btn-primary mt-3">Retour à la liste des tâches</a>
            </div>
        </div>
    </div>
{% endblock %}
